[flake8]
max-line-length = 120
extend-ignore = E203, W503, F401, D100, D103, D104, D200, D202, D205, D401, F841
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    .tox,
    .pytest_cache,
    demo,
    debug,
    workflows
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow unused imports in test helper files
    */tests/import_helpers.py:F401
    # Allow unused imports in synthesizer files (lazy loading)
    *synthesizer*.py:F401
